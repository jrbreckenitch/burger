<p id="title">Eat-Da-Burger!</p>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <p class="header">Burgers Da Eat</p>
            {{#each burger}}
                {{#unless this.devoured }}
                    
                    <form action="burgers/update/{this.id}"?_method="PUT" method="POST">
                        <label>{{ this.burger_name }}</label>
                        <input type="hidden" name="eatup" value="true">
                        <button type="submit" class="btn">Eat up!</button>
                    </form>
                {{/unless}}
            {{/each}}
        </div>
        <div class="col-sm-6">
            <p class="header">Burgers Devoured</p>
            {{#each burger}}
                {{#if this.devoured}}
                <p>
                    {{this.burger_name}}
                </p>
                {{/if}}
            {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <form action="burgers/create" method="POST">
                <div class="form-group">
                    <label for="burger" class="header">Create a New Burger!</label>
                    {{!-- <input type="text" id="newBurger" name="name"> --}}
                    <textarea class="form-control input-group" aria-label="With textarea"></textarea>
                    <br>
                    <button type="submit" class="btn">Create!</button>
                </div>
            </form>
        </div>
    </div>
</div>